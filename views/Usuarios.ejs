<%- include("partials/head",{title:"Lista de Usuários | Mercado Business"}) %>
    <link rel="stylesheet" href="/css/usuarios.css">
</head>
<body>
    <%- include("partials/navbar") %>

    <!-- Header da Página -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-6 fw-bold mb-2">Todos os Usuários</h1>
                    <p class="lead mb-0">Conecte-se com profissionais da nossa comunidade</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-2"></i>Voltar para Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Conteúdo Principal -->
    <main class="container mb-5">
        <!-- Caixa de Busca -->
        <div class="search-box">
            <div class="row">
                <div class="col-md-8">
                    <form action="/users" method="GET">
                        <div class="input-group">
                            <input type="text" class="form-control" name="q" placeholder="Pesquisar por nome, área de atuação ou habilidades..." value="<%= searchQuery || '' %>">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search me-2"></i>Buscar
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 text-md-end mt-2 mt-md-0">
                    <div class="d-flex justify-content-md-end gap-2">
                        <a href="/users" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise me-2"></i>Limpar
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informações de Busca -->
        <% if (searchQuery) { %>
            <div class="search-results-info">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">Resultados da busca</h4>
                        <p class="mb-0 text-muted">Mostrando resultados para: <strong>"<%= searchQuery %>"</strong></p>
                    </div>
                    <a href="/users" class="btn btn-outline-secondary btn-sm">Limpar busca</a>
                </div>
            </div>
        <% } %>

        <!-- Informações de Paginação -->
        <div class="d-flex justify-content-between align-items-center mb-4 content-section">
            <div>
                <p class="text-muted mb-0">
                    <% if (searchQuery) { %>
                        Mostrando <%= users.length %> resultado(s) para "<strong><%= searchQuery %></strong>" 
                        (de <%= totalUsers %> usuário(s) no total)
                    <% } else { %>
                        Mostrando <%= users.length %> de <%= totalUsers %> usuário(s)
                    <% } %>
                </p>
            </div>
            <div>
                <p class="text-muted mb-0">
                    Página <%= currentPage %> de <%= totalPages %>
                </p>
            </div>
        </div>

        <!-- Lista de Usuários -->
        <div class="row g-4">
            <% if (users.length !== 0) { %>
                <% users.forEach((user) => { %>
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-center d-flex flex-column">
                                <img src="<%= user.profileImage %>" alt="<%= user.name %>" class="user-image rounded-circle mx-auto mb-3">
                                <h5 class="card-title text-primary mb-2">
                                    <% if (user.username) { %>
                                        @<%= user.username %>
                                    <% } else { %>
                                        <%= user.name %>
                                    <% } %>
                                </h5>
                                <% if (user.work) { %>
                                    <p class="card-text text-muted mb-2"><%= user.work %></p>
                                <% } %>
                                <% if (user.location) { %>
                                    <p class="card-text text-muted small mb-3">
                                        <i class="bi bi-geo-alt"></i> <%= user.location %>
                                    </p>
                                <% } %>
                                <div class="mt-auto">
                                    <a href="/profile/user/<%= user.id %>" class="view-badge">Ver Perfil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-people display-4 text-muted mb-3"></i>
                            <h3 class="h4 text-muted mb-3">
                                <% if (searchQuery) { %>
                                    Nenhum resultado encontrado
                                <% } else { %>
                                    Nenhum usuário encontrado
                                <% } %>
                            </h3>
                            <p class="text-muted mb-0">
                                <% if (searchQuery) { %>
                                    Não encontramos resultados para "<%= searchQuery %>". Tente outros termos de busca.
                                <% } else { %>
                                    Parece que não há usuários cadastrados no momento.
                                <% } %>
                            </p>
                            <% if (searchQuery) { %>
                                <a href="/users" class="btn btn-primary mt-3">Ver Todos os Usuários</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Paginação -->
        <% if (totalPages > 1) { %>
            <nav aria-label="Navegação de páginas" class="mt-5">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/users?page=<%= currentPage - 1 %><% if (searchQuery) { %>&q=<%= encodeURIComponent(searchQuery) %><% } %>" aria-label="Anterior">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Anterior">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } %>

                    <!-- Primeiras páginas -->
                    <% for (let i = 1; i <= Math.min(3, totalPages); i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/users?page=<%= i %><% if (searchQuery) { %>&q=<%= encodeURIComponent(searchQuery) %><% } %>"><%= i %></a>
                        </li>
                    <% } %>

                    <!-- Separador se necessário -->
                    <% if (currentPage > 5) { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#">...</a>
                        </li>
                    <% } %>

                    <!-- Páginas do meio -->
                    <% for (let i = Math.max(4, currentPage - 1); i <= Math.min(currentPage + 1, totalPages - 2); i++) { %>
                        <% if (i > 3 && i < totalPages - 2) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/users?page=<%= i %><% if (searchQuery) { %>&q=<%= encodeURIComponent(searchQuery) %><% } %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <!-- Separador se necessário -->
                    <% if (currentPage < totalPages - 3) { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#">...</a>
                        </li>
                    <% } %>

                    <!-- Últimas páginas -->
                    <% for (let i = Math.max(totalPages - 2, 4); i <= totalPages; i++) { %>
                        <% if (i > currentPage + 1 && i > 3) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/users?page=<%= i %><% if (searchQuery) { %>&q=<%= encodeURIComponent(searchQuery) %><% } %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/users?page=<%= currentPage + 1 %><% if (searchQuery) { %>&q=<%= encodeURIComponent(searchQuery) %><% } %>" aria-label="Próxima">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Próxima">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </main>

<%- include("partials/foot") %>