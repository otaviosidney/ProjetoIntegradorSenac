<%- include("partials/head",{title:"Perfil - Mercado Business"}) %>
</head>

<body>

    <%- include("partials/navbar") %>
        <main class="container-fluid p-0">
            <!-- Cabeçalho do Perfil -->
            <div class="profile-header">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <img src="<%= user.profileImage %>" class="rounded-circle profile-img">
                        </div>
                        <div class="col-md-6">
                            <h2 class="mb-1">
                                <%= '@' + user.username%>
                            </h2>
                            <p class="mb-1">
                                <%= user.work || "Não Informado"%>
                            </p>
                            <p class="mb-0"><i class="bi bi-geo-alt"></i> <%= user.address || "Não Informado" %></p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <% if(isMyUser){ %>
                                <div class="mt-3 mt-md-0">
                                    <a href="/profile/edit" class="btn btn-light fw-bold me-2">
                                        <i class="bi bi-pencil-square"></i> Editar Perfil
                                    </a>
                                    <a href="/posts/create" class="btn btn-outline-light fw-bold">
                                        <i class="bi bi-plus-circle"></i> Nova Postagem
                                    </a>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container mt-4">
                <!-- Alertas -->
                <%- include("partials/messages") %>
                <div class="row">
                    <!-- Coluna Esquerda - Informações do Perfil -->
                    <div class="col-lg-4 mb-4">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Informações</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><i class="bi bi-person text-primary me-2"></i>
                                    <strong>Nome:</strong>
                                    <%= user.name || "Não Informado"%>
                                </p>
                                <p class="mb-2"><i class="bi bi-telephone text-primary me-2"></i>
                                    <strong>Telefone:</strong>
                                    <%= user.phone || "Não Informado"%>
                                </p>
                                <p class="mb-2"><i class="bi bi-envelope text-primary me-2"></i>
                                    <strong>E-mail:</strong>
                                    <%= user.email || "Não Informado" %>
                                </p>
                                <p class="mb-2"><i class="bi bi-briefcase text-primary me-2"></i> <strong>Área:</strong>
                                    <%= user.work || "Não Informado" %>
                                </p>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Habilidades</h5>
                            </div>
                            <div class="card-body">
                                <% if (userSkills.length===0){ %>
                                    <p class="text-muted">Nenhuma habilidade cadastrada.</p>
                                <% } %>

                                <% userSkills.forEach( userSkill=> { %>
                                    <div class="skill-tag">
                                        <%= userSkill.skill %>
                                    </div>
                                <% }) %>

                                <% if(isMyUser && userSkills.length < 5){ %>
                                    <div class="mt-3">
                                        <a href="#" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalAddSkill">Adicionar
                                        Habilidade</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Coluna Direita - Postagens -->
                    <div class="col-lg-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Minhas Postagens</h5>
                            </div>
                            <div class="card-body">

                                <!-- Exemplo de Postagem -->
                                <% posts.forEach( post => { %>
                                     <div class="post-card border rounded p-3 mb-3 bg-white">
                                    <div class="d-flex align-items-center mb-2">
                                        <img src="<%= user.profileImage %>" class="rounded-circle me-2"
                                            style="width: 40px; height: 40px; object-fit: cover;">
                                        <div>
                                            <p class="mb-0 fw-bold">
                                                <%= user.username %>
                                            </p>
                                            <p class="mb-0 small text-muted"><%= formatPostDate(post.createdAt) %></p>
                                        </div>
                                        <% if(isMyUser){ %>
                                            <div class="ms-auto">
                                                <a href="/posts/edit/<%= post.id %>" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i> Editar
                                                </a>
                                            </div>
                                        <% } %>
                                    </div>
                                    <p class="mb-0"><%- post.content %></p>
                                </div>
                                <% }) %>   
                            
                            <!-- Mensagem para usuários sem postagens -->
                            <% if (posts.length === 0){ %>
                            <div class="rounded-3 p-5 text-center ">
                                <i class="bi bi-file-text display-4 text-muted mb-3"></i>
                                <p class="text-muted fst-italic mb-0">Nenhuma postagem ainda.</p>
                                <% if(isMyUser){ %>
                                    <a href="/posts/create" class="btn btn-primary mt-2">Criar Primeira Postagem</a>
                                <% } %>
                            </div>
                            <% } %>
                           
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal para cadastro de habilidades -->
            <div class="modal fade" id="modalAddSkill" tabindex="-1" aria-labelledby="modalAddSkillLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content bg-white">

                        <div class="modal-header">
                            <h5 class="modal-title" id="modalAddSkillLabel">Adicionar Habilidade</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Fechar"></button>
                        </div>

                        <form action="/profile/skills/create" method="POST">
                            <div class="modal-body">

                                <label class="form-label">Nome da Habilidade</label>
                                <input minlength="3" maxlength="50" type="text" name="skill" class="form-control"
                                    placeholder="Ex: Gestão de Projetos" required>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </main>

<%- include("partials/foot") %>